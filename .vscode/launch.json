{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BE Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend build",
      "program": "${workspaceFolder}/backend/Zwoo.Backend/bin/Debug/net7.0/Zwoo.Backend.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/Zwoo.Backend",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "DASH Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dashboard build",
      "program": "${workspaceFolder}/backend/Zwoo.Dashboard/bin/Debug/net7.0/Zwoo.Dashboard.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/Zwoo.Dashboard",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "BE Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "FE Launch Debug Preview",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "frontend preview",
      "serverReadyAction": {
        "pattern": "Local: http://localhost:([0-9]+)",
        "action": "openExternally",
        "killOnServerStop": true
      }
    },
    {
      "name": "FE Launch Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "frontend serve",
      "serverReadyAction": {
        "pattern": "Local: http://localhost:([0-9]+)",
        "action": "openExternally",
        "killOnServerStop": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Start Zwoo",
      "configurations": ["FE Launch Debug", "BE Launch"]
    }
  ]
}
