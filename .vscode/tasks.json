{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/ZwooBackend/ZwooBackend.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/backend/ZwooBackend/ZwooBackend.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/ZwooBackend/ZwooBackend.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "wasm watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/ZwooWasmAdapter/ZwooWasmAdapter.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "frontend preview",
      "command": "yarn serve",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$vite",
      "isBackground": true
    },
    {
      "label": "frontend serve",
      "command": "yarn serve:prod",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$vite",
      "isBackground": true
    }
  ]
}
