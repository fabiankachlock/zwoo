{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/Zwoo.Backend/Zwoo.Backend.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dashboard build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/backend/Zwoo.Dashboard/Zwoo.Dashboard.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/backend/Zwoo.Backend/Zwoo.Backend.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/Zwoo.Backend/Zwoo.Backend.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "wasm watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "frontend preview",
      "command": "pnpm serve",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$vite",
      "isBackground": true
    },
    {
      "label": "frontend serve",
      "command": "pnpm serve:prod",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$vite",
      "isBackground": true
    }
  ]
}
