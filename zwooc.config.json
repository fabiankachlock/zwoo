{
  "$schema": "https://raw.githubusercontent.com/zwoo-hq/zwooc/main/zwooc.schema.json",
  "frontend": {
    "$adapter": "vite-yarn",
    "$fragments": {
      "test:unit": "",
      "test:e2e": "",
      "test:e2e:ui": "",
      "lint": "",
      "lint:ci": "",
      "i18n:check": "",
      "format": "",
      "format:ci": "",
      "prepare": "",
      "setup:version": "",
      "postversion": "",
      "deps:check": "",
      "deps:viz": "",
      "typecheck": "vue-tsc --noEmit && echo \"\""
    },
    "dev": {
      "mode": "dev",
      "env": []
    },
    "prod": {
      "mode": "prod"
    },
    "dev-instance": {
      "mode": "dev-instance"
    },
    "tauri": {
      "mode": "tauri",
      "env": ["VUE_APP_IS_TAURI=true"]
    },
    "tauri-embedded": {
      "mode": "tauri-embedded"
    },
    "preview": {
      "mode": "preview"
    },
    "analyze": {
      "mode": "analyze",
      "run": false,
      "watch": false
    }
  },
  "backend": {
    "$adapter": "dotnet",
    "server": {
      "project": "Zwoo.Backend"
    },
    "local": {
      "project": "Zwoo.Backend.LocalServer"
    },
    "ziad": {
      "project": "Zwoo.Dashboard"
    },
    "wasm": {
      "project": "Zwoo.GameEngine.Wasm",
      "build": {
        "args": {
          "-p:RunAOTCompilation=true": ""
        }
      }
    }
  },
  "$fragments": {
    "docker": {
      "$default": "docker compose -f ./docker-compose.local.yml up"
    }
  }
}
