{
  "name": "frontend",
  "version": "1.0.0-beta.17",
  "private": true,
  "scripts": {
    "serve": "vite --mode preview",
    "serve:prod": "vite --mode dev",
    "serve:tauri": "cross-env VUE_APP_IS_TAURI=true vite --mode dev",
    "serve:fe-proxy": "vite --mode dev-proxy",
    "serve:local-server": "vite --mode local-server",
    "//": "echo is needed, so that vue-tsc dont picks up file path arguments passed by lint-staged, which breaks vue-tsc",
    "typecheck": "vue-tsc --noEmit && echo \"\"",
    "__preview": "vite preview --mode preview",
    "__preview:prod": "vite preview --mode dev",
    "build": "yarn pre:build && vite build --mode production",
    "build-fe-only": "yarn pre:build-fe-only && vite build --mode production",
    "build:dev-instance": "yarn pre:build && vite build --mode dev-instance",
    "build-fe-only:dev-instance": "yarn pre:build-fe-only && vite build --mode dev-instance",
    "build:tauri": "yarn pre:build && cross-env VUE_APP_IS_TAURI=true vite build --mode production --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build-fe-only:tauri": "yarn pre:build-fe-only && cross-env VUE_APP_IS_TAURI=true vite build --mode production --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build:preview": "yarn pre:build && vite build --mode preview --outDir dist-preview",
    "build-fe-only:preview": "yarn pre:build-fe-only && vite build --mode preview --outDir dist-preview",
    "build:analyze": "pre:build-fe-only && cross-env ANALYZE=true vite build",
    "pre:build": "yarn typecheck && yarn build:assets",
    "pre:build-fe-only": "yarn typecheck && yarn build-fe-only:assets",
    "build:assets": "yarn build:cards && yarn build:icons && yarn build:wasm",
    "build-fe-only:assets": "yarn build:cards && yarn build:icons",
    "build:cards": "node ./scripts/buildCardAssets.js",
    "build:icons": "node ./src/modules/zwoo-icons/generate-icons.js",
    "build:wasm": "dotnet publish -c Release -p:RunAOTCompilation=true ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "build:wasm-dev": "dotnet publish ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "build:wasm-watch": "dotnet watch publish --project ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:e2e:ui": "cypress open",
    "lint": "eslint \"src/**/*.{js,ts,vue,html}\" --fix",
    "lint:ci": "eslint \"src/**/*.{js,ts,vue,html}\" --max-warnings 50",
    "i18n:check": "node ./scripts/checkI18nFiles.js",
    "format": "prettier --write \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "format:ci": "prettier --check \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "prepare": "cd .. && husky install frontend/.husky",
    "postversion": "yarn setup:version && git add .env",
    "setup:version": "node ./scripts/version.js",
    "deps:check": "depcruise -m --config .dependency-cruiser.js src",
    "deps:viz": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > dependency-graph.svg"
  },
  "dependencies": {
    "@hcaptcha/vue3-hcaptcha": "^1.3.0",
    "@log-rush/client": "^1.1.1",
    "@tauri-apps/api": "^1.5.1",
    "dexie": "^3.2.1",
    "pinia": "^2.1.7",
    "register-service-worker": "^1.7.2",
    "semver": "^7.3.7",
    "vue": "^3.4.15",
    "vue-i18n": "^9.10.1",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.144",
    "@iconify/json-tools": "^1.0.10",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@intlify/vue-i18n-loader": "^4.2.0",
    "@tauri-apps/cli": "^1.5.6",
    "@types/jest": "^29.2.2",
    "@types/node": "^20.11.16",
    "@types/semver": "^7.5.4",
    "@types/vue-router": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/vue3-jest": "^29.2.6",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "cypress": "13.5.1",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^9.21.1",
    "fs-extra": "^11.2.0",
    "http-proxy": "^1.18.1",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-pwa": "^0.17.5",
    "vue-tsc": "^1.8.27",
    "workbox-precaching": "^7.0.0",
    "ws": "^8.16.0"
  },
  "//1": "This solves an ERR_REQUIRE_ESM issue originated from cypress",
  "//2": "seems to be an issue with specific to yarn v1, might upgrade or change to pnpm later",
  "resolutions": {
    "jackspeak": "2.1.1"
  },
  "lint-staged": {
    "src/**/!(*test).(ts|vue|html)": [
      "yarn lint",
      "yarn typecheck"
    ],
    "src/**/*.(ts|vue|css|html)": [
      "yarn format"
    ],
    "src/**/*.json": [
      "yarn i18n:check"
    ],
    "src/**/*.*": [
      "yarn deps:check"
    ]
  }
}
