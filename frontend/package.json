{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vite --mode preview",
    "serve:prod": "vite --mode dev",
    "serve:tauri": "cross-env VUE_APP_IS_TAURI=true vite --mode dev",
    "serve:fe-proxy": "vite --mode dev-proxy",
    "serve:local-server": "vite --mode local-server",
    "//": "echo is needed, so that vue-tsc dont picks up file path arguments passed by lint-staged, which breaks vue-tsc",
    "typecheck": "vue-tsc --noEmit && echo \"\"",
    "__preview": "vite preview --mode preview",
    "__preview:prod": "vite preview --mode dev",
    "build": "pnpm pre:build && vite build --mode production",
    "build-fe-only": "pnpm pre:build-fe-only && vite build --mode production",
    "build:dev-instance": "pnpm pre:build && vite build --mode dev-instance",
    "build-fe-only:dev-instance": "pnpm pre:build-fe-only && vite build --mode dev-instance",
    "build:tauri": "pnpm pre:build && cross-env VUE_APP_IS_TAURI=true vite build --mode production --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build-fe-only:tauri": "pnpm pre:build-fe-only && cross-env VUE_APP_IS_TAURI=true vite build --mode production --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build:preview": "pnpm pre:build && vite build --mode preview --outDir dist-preview",
    "build-fe-only:preview": "pnpm pre:build-fe-only && vite build --mode preview --outDir dist-preview",
    "build:analyze": "pre:build-fe-only && cross-env ANALYZE=true vite build",
    "pre:build": "pnpm typecheck && pnpm build:assets",
    "pre:build-fe-only": "pnpm typecheck && pnpm build-fe-only:assets",
    "build:assets": "pnpm build:cards && pnpm build:icons && pnpm build:themes && pnpm build:wasm",
    "build-fe-only:assets": "pnpm build:cards && pnpm build:icons && pnpm build:themes",
    "build:cards": "node ./scripts/buildCardAssets.js",
    "build:icons": "node ./src/modules/zwoo-icons/generate-icons.js",
    "build:themes": "node ./src/modules/zwoo-themes/build-themes.js",
    "build:wasm": "dotnet publish -c Release -p:RunAOTCompilation=true ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "build:wasm-dev": "dotnet publish ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "build:wasm-watch": "dotnet watch publish --project ../backend/Zwoo.GameEngine.Wasm/Zwoo.GameEngine.Wasm.csproj",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:e2e:ui": "cypress open",
    "lint": "eslint \"src/**/*.{js,ts,vue,html}\" --fix",
    "lint:ci": "eslint \"src/**/*.{js,ts,vue,html}\" --max-warnings 50",
    "i18n:check": "node ./scripts/checkI18nFiles.js",
    "format": "prettier --write \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "format:ci": "prettier --check \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "prepare": "cd .. && husky frontend/.husky",
    "postversion": "pnpm setup:version && git add .env",
    "setup:version": "node ./scripts/version.js",
    "deps:check": "depcruise -m --config .dependency-cruiser.js src",
    "deps:viz": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > dependency-graph.svg"
  },
  "dependencies": {
    "@hcaptcha/vue3-hcaptcha": "^1.3.0",
    "@log-rush/client": "^1.1.1",
    "@tauri-apps/api": "^2.1.1",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@vueuse/core": "^12.2.0",
    "@vueuse/integrations": "^11.0.3",
    "dexie": "^4.0.10",
    "focus-trap": "^7.5.4",
    "minisearch": "^7.1.1",
    "pinia": "^2.2.8",
    "register-service-worker": "^1.7.2",
    "semver": "^7.6.3",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.5",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.282",
    "@iconify/json-tools": "^1.0.10",
    "@intlify/unplugin-vue-i18n": "^5.3.0",
    "@tauri-apps/cli": "2.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/semver": "^7.5.8",
    "@types/vue-router": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "chroma-js": "^3.1.2",
    "cross-env": "^7.0.3",
    "cypress": "13.5.1",
    "dependency-cruiser": "^16.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.32.0",
    "fs-extra": "^11.2.0",
    "http-proxy": "^1.18.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.16",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.21.1",
    "vue-tsc": "^2.1.10",
    "workbox-build": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-window": "^7.3.0",
    "ws": "^8.18.0"
  },
  "//1": "This solves an ERR_REQUIRE_ESM issue originated from cypress",
  "//2": "seems to be an issue with specific to pnpm v1, might upgrade or change to pnpm later",
  "resolutions": {
    "jackspeak": "2.1.1"
  },
  "engines": {
    "node": ">=22.10.0",
    "pnpm": ">=9.13.0"
  },
  "lint-staged": {
    "src/**/!(*test).(ts|vue|html)": [
      "pnpm lint",
      "pnpm typecheck"
    ],
    "src/**/*.(ts|vue|css|html)": [
      "pnpm format"
    ],
    "src/**/*.json": [
      "pnpm i18n:check"
    ],
    "src/**/*.*": [
      "pnpm deps:check"
    ]
  },
  "packageManager": "pnpm@9.13.0+sha512.beb9e2a803db336c10c9af682b58ad7181ca0fbd0d4119f2b33d5f2582e96d6c0d93c85b23869295b765170fbdaa92890c0da6ada457415039769edf3c959efe"
}
