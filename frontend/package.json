{
  "name": "frontend",
  "version": "1.0.0-beta.5",
  "private": true,
  "scripts": {
    "serve": "cross-env VUE_APP_USE_BACKEND=false vite",
    "serve:prod": "cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=true vite",
    "preview": "cross-env VUE_APP_USE_BACKEND=false vite preview",
    "preview:prod": "cross-env VUE_APP_USE_BACKEND=true vite preview",
    "build": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=false vite build",
    "build:tauri": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=false VUE_APP_IS_TAURI=true vite build --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build:preview": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=false vite build --outDir dist-preview",
    "build:tauri:preview": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=false VUE_APP_IS_TAURI=true  vite build --outDir dist-preview && cp -r dist-preview ./dist-tmp",
    "build:analyze": "yarn build:assets && cross-env ANALYZE=true vite build",
    "build:assets": "node ./scripts/buildCardAssets.js && yarn build:icons",
    "build:icons": "node ./src/modules/zwoo-icons/generate-icons.js",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:e2e:ui": "cypress open",
    "lint": "eslint \"src/**/*.{js,ts,vue,html}\" --fix",
    "lint:ci": "eslint \"src/**/*.{js,ts,vue,html}\" --max-warnings 50",
    "i18n:check": "node ./scripts/checkI18nFiles.js",
    "format": "prettier --write \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "format:ci": "prettier --check \"src/**/*.{js,ts,vue,html,css}\" \"./*.{js,ts,vue,html,css}\"",
    "prepare": "cd .. && husky install frontend/.husky",
    "postversion": "yarn setup:version && git add .env",
    "setup:version": "node ./scripts/version.js",
    "deps:check": "depcruise -m --config .dependency-cruiser.js src",
    "deps:viz": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > dependency-graph.svg"
  },
  "dependencies": {
    "@log-rush/client": "^1.1.1",
    "@tauri-apps/api": "^1.1.0",
    "dexie": "^3.2.1",
    "pinia": "^2.0.11",
    "register-service-worker": "^1.7.2",
    "semver": "^7.3.7",
    "vue": "^3.2.31",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.130",
    "@iconify/json-tools": "^1.0.10",
    "@intlify/vite-plugin-vue-i18n": "^6.0.3",
    "@intlify/vue-i18n-loader": "^4.2.0",
    "@tauri-apps/cli": "^1.1.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^18.11.7",
    "@types/semver": "^7.3.12",
    "@types/vue-router": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.1.0",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "autoprefixer": "^10",
    "babel-jest": "^27",
    "cross-env": "^7.0.3",
    "cypress": "^10.9.0",
    "dependency-cruiser": "^11.17.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^27.1.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8",
    "prettier": "^2.7.1",
    "tailwindcss": "^3",
    "ts-jest": "^27.0.4",
    "typescript": "~4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-pwa": "^0.13.1",
    "vue-jest": "^5.0.0-0",
    "workbox-precaching": "^6.5.4",
    "ws": "^8.9.0"
  },
  "lint-staged": {
    "src/**/!(*test).(ts|vue|html)": [
      "yarn lint"
    ],
    "src/**/*.(ts|vue|css|html)": [
      "yarn format"
    ],
    "src/**/*.json": [
      "yarn i18n:check"
    ]
  }
}
