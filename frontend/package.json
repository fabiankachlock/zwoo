{
  "name": "frontend",
  "version": "1.0.0-beta.4",
  "private": true,
  "scripts": {
    "serve": "cross-env VUE_APP_USE_BACKEND=false vue-cli-service serve",
    "serve:prod": "cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=true vue-cli-service serve",
    "build": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=false vue-cli-service build",
    "build:tauri": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=true VUE_APP_DEVELOPMENT=false VUE_APP_IS_TAURI=true vue-cli-service build --dest dist-preview && cp -r dist-preview ./dist-tmp",
    "build:preview": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=false vue-cli-service build --dest dist-preview",
    "build:tauri:preview": "yarn build:assets && cross-env VUE_APP_USE_BACKEND=false VUE_APP_IS_TAURI=true  vue-cli-service build --dest dist-preview && cp -r dist-preview ./dist-tmp",
    "build:analyze": "yarn build:assets && cross-env ANALYZE=true vue-cli-service build",
    "build:assets": "node ./scripts/buildCardAssets.js",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "lint:ci": "vue-cli-service lint --no-fix --max-warnings 50",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|ts|vue)\" --locales \"./src/locales/**/*.json\"",
    "i18n:check": "node ./scripts/checkI18nFiles.js",
    "format": "prettier --write \"src/**/*.{ts,vue,html,css,d.ts}\"",
    "format:ci": "prettier --check \"src/**/*.{ts,vue,html,css,d.ts}\"",
    "prepare": "cd .. && husky install frontend/.husky",
    "postversion": "yarn setup:version && git add .env",
    "setup:version": "node ./scripts/version.js"
  },
  "dependencies": {
    "@log-rush/client": "^1.1.1",
    "@tauri-apps/api": "^1.1.0",
    "@types/semver": "^7.3.12",
    "autoprefixer": "^10",
    "core-js": "^3.25.1",
    "dexie": "^3.2.1",
    "pinia": "^2.0.11",
    "postcss": "^8",
    "register-service-worker": "^1.7.1",
    "semver": "^7.3.7",
    "tailwindcss": "^3",
    "vue": "^3.2.31",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@iconify/vue": "^4.0.0",
    "@intlify/vue-i18n-loader": "^4.2.0",
    "@tauri-apps/cli": "^1.1.1",
    "@types/jest": "^27.5.0",
    "@types/vue-router": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vue/cli-plugin-babel": "~5.0.4",
    "@vue/cli-plugin-e2e-cypress": "~5.0.1",
    "@vue/cli-plugin-eslint": "~5.0.1",
    "@vue/cli-plugin-pwa": "~5.0.1",
    "@vue/cli-plugin-router": "~5.0.1",
    "@vue/cli-plugin-typescript": "~5.0.4",
    "@vue/cli-plugin-unit-jest": "~5.0.1",
    "@vue/cli-service": "~5.0.4",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.1.0",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "cross-env": "^7.0.3",
    "cypress": "^10.9.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^8.7.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^27.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^27.0.4",
    "typescript": "~4.8.4",
    "vue-cli-plugin-i18n": "~2.3.1",
    "vue-jest": "^5.0.0-0",
    "webpack-bundle-analyzer": "^4.6.1",
    "ws": "^8.9.0"
  },
  "lint-staged": {
    "src/**/!(*test).(ts|vue|html)": [
      "yarn lint"
    ],
    "src/**/*.(ts|vue|css|html)": [
      "yarn format"
    ],
    "src/**/*.json": [
      "yarn i18n:check"
    ]
  }
}
